@{
    ViewData["Title"] = "Lista de Slider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-4">
        <div class="col-12 col-md-8">
            <h1>Lista de Slider</h1>
        </div>
        <div class="col-12 col-md-4">
            <a asp-action="Add" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Nuevo Slider</a>
        </div>
    </div>

    <table id="tblslider" class="table table-striped table-hover w-100 mt-3">
        <thead>
            <tr>
                <th>Slider</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/slider.js"></script>
}


