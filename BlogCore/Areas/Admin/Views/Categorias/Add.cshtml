@model BlogCore.Models.Categoria
@{
    ViewData["Title"] = "Crear Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="text-center mt-4 mb-3">
        <h1 class="fw-bold">Nueva Categoria</h1>
    </div>

    <form asp-action="Add" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="col-12 col-lg-10 offset-lg-1 bg-white shadow p-3 rounded">
                <div class="">
                    <label asp-for="Nombre" class="form-label text-uppercase fw-bold text-muted"></label>
                    <input asp-for="Nombre" type="text" class="form-control rounded" placeholder="Nombre de Categoria" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Orden" class="form-label text-uppercase fw-bold text-muted"></label>
                    <input asp-for="Orden" type="number" class="form-control rounded" placeholder="Orden" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i> Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Regresar</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

