
@{
    ViewData["Title"] = "Lista de Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-4">
        <div class="col-12 col-md-8">
            <h1>Lista de Categorias</h1>
        </div>
        <div class="col-12 col-md-4">
            <a asp-action="Add" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Nueva Categoria</a>
        </div>
    </div>

    <table id="tblcategoria" class="table table-striped table-hover w-100 mt-3">
        <thead>
            <tr>
                <th>Categoria</th>
                <th>Orden</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/categoria.js"></script>
}

