@{
    ViewData["Title"] = "Lista de Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-4">
        <div class="col-12 col-md-8">
            <h1>Lista de Productos</h1>
        </div>
        <div class="col-12 col-md-4">
            <a asp-action="Add" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Nuevo Producto</a>
        </div>
    </div>

    <table id="tblproducto" class="table table-striped table-hover w-100 mt-3">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Descripcion</th>
                <th>Categoria</th>
                <th>Fecha Creacion</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/producto.js"></script>
}



